<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".Advertisment_add">

    <LinearLayout
        android:id="@+id/iiiiii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bck_to_adv_home"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:srcCompat="@drawable/bck_btn" />

        <TextView
            android:id="@+id/idTVHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Add Advertisment"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FF000000"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    <!-- creating an image view for displaying image-->
    <TextView
        android:id="@id/disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iiiiii"
        android:text="Enter Discription"
        android:textSize="20dp"


        ></TextView>

    <EditText
        android:id="@+id/dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disc">

    </EditText>

    <ImageView
        android:id="@+id/idIVImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/dis"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="3dp" />

    <!-- creating a button to choose image-->
    <Button
        android:id="@+id/idBtnChooseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:text="Choose Image"
        android:textAllCaps="false" />

    <!-- creating a button to upload image-->
    <Button
        android:id="@+id/idBtnUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtnChooseImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="4dp"
        android:text="Add advertisment"
        android:textAllCaps="false" />


</RelativeLayout>