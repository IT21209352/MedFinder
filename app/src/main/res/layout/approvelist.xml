<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pha_acc_list_id"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Pharmacy Id"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/pha_acc_list_name"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Pharmacy name"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/pha_acc_list_address"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="Pharmacy address"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/del_pha_accept"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="deltpharmacyrequest"
                app:srcCompat="@drawable/bin"
                />

            <ImageButton
                android:id="@+id/add_pha_acc"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="accptharmacyrequest"
                app:srcCompat="@drawable/check" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

