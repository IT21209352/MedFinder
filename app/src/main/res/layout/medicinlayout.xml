<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/edtdre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="left"

            android:text="Drug name"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/edtdrgnme"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:textSize="20dp"
            android:text="Drug name"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/edtdrgDe"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="Drug Drescription"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/edtdrgDesc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ems="10"
            android:textSize="20dp"
            android:text="Drug Drescription"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/adImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/baseline_image_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editdrugrequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="edit drug"
                android:layout_weight="1"
                android:backgroundTint="@color/blue4"
                app:cornerRadius="20dp"
                />

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="delete drug"
                android:layout_weight="1"
                android:backgroundTint="@color/blue4"
                app:cornerRadius="20dp"
                />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>